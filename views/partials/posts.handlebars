<article class="posts">
    <div class="whole">
        <div class="info">
            <div class="post-title">
                <a href="/post/{{id}}" class="links">{{title}}</a>
            </div>
            <div class="creator">
                <p id="comment-subtitle">
                    Posted by <b>{{user.username}} </b> on <b>{{formatDate created_at}}</b>
                </p>
            </div>
        </div>
        <div class="content-section">
            <p>{{content}}</p>
        </div>
    </div>
</article>